$font_family = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif

$text_colors = {
  primary: rgba(black, 0.87),
  secondary: rgba(black, 0.54),
  disabled: rgba(black, 0.38)
}

$edge_colors = {
  shadow: rgba(black, 0.18),
  divider: rgba(black, 0.12)
}

$canvas_colors = {
  lighter: white,
  light: #fafafa,
  dark: #f5f5f5,
  darker: #e0e0e0
}

$status_colors = {
  danger: #ff1744,
  warning: #ffea00,
  success: #00e676,
  neutral: #00b0ff
}

$colors = {
  canvas: $canvas_colors,
  edge: $edge_colors,
  status: $status_colors,
  text: $text_colors
}

$breakpoints = {
  full: 784px,
  large: 704px,
  medium: 544px,
  small: 424px
}
